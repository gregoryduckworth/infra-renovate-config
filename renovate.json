{
  "extends": [
    "config:base",
    "docker:enableMajor"
  ],
  "semanticCommitScope": "deps",
  "labels": ["chore"],
  "vulnerabilityAlerts": {
    "labels": ["security"]
  },
  "docker": {
    "pinDigests": true,
    "semanticCommitType": "build"
  },
  "docker-compose": {
    "digest": {
      "enabled": false
    }
  },
  "packageRules": [
    {
      "depTypeList": ["dependencies"],
      "semanticCommitType": "build"
    },
    {
      "packagePatterns": ["node"],
      "groupName": "node",
      "allowedVersions": "^10.15"
    },
    {
      "packagePatterns": ["newrelic", "metrics-client"],
      "groupName": "metrics"
    },
    {
      "packagePatterns": ["lab", "code", "sinon", "mocha"],
      "groupName": "testing"
    },
    {
      "packagePatterns": ["eslint"],
      "groupName": "linters"
    },
    {
      "packagePatterns": ["hapi", "boom", "joi", "hoek", "wreck"],
      "groupName": "hapi"
    }
  ]
}
